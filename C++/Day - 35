// https://www.codechef.com/problems/CHEAT
#include <iostream>

int main() {
    int T;
    std::cin >> T;

    while (T--) {
        int N;
        std::cin >> N;

        int currentDay = 0;
        int count = 0;

        for (int i = 0; i < N; i++) {
            if (currentDay == 1) {
                count++;
            }
            currentDay = (currentDay + 1) % 7;
        }

        std::cout << count << std::endl;
    }

    return 0;
}
