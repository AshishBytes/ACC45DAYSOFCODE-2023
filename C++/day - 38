//https://www.codechef.com/problems/TRAVELPS
#include <iostream>
using namespace std;

int main() {
	int t;
	cin>>t;
	while(t--){
	    int n,a,b,zero=0,one=0,time;
	    cin>>n>>a>>b;
	    string s;
	    cin>>s;
	    for(int i=0;i<n;i++){
	        if(s[i]=='0'){
	            zero++;
	        }
	        else{
	            one++;
	        }
	    }
	    time=zero*a + one*b;
	    cout<<time<<endl;
	}
	return 0;
}
